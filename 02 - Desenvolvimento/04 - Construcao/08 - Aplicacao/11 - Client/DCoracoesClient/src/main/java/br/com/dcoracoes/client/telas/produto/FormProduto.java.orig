    @Override
    public boolean validarTela() {
        StringBuilder stringError = new StringBuilder();
        if (txtDescricao.getText().trim().isEmpty()) {
            stringError.append(MessageProduto.CAMPO_DESCRICAO_OBRIGATORIO);
        }
        if (txtReferenciaCatalogo.getText().trim().isEmpty()) {
            if (!stringError.toString().isEmpty()) {
                stringError.append("\n");
            }
            stringError.append(MessageProduto.CAMPO_REFERENCIA_PRODUTO_OBRIGATORIO);
        }
        if (jtxtPrecoVenda.getText().trim().isEmpty()) {
            if (!stringError.toString().isEmpty()) {
                stringError.append("\n");
            }
            stringError.append(MessageProduto.CAMPO_PRECO_VENDA_OBRIGATORIO);
        }

        //Validando cor
        if (((DefaultTableModel) tableInfCores.getModel()).getRowCount() > 0) {

            StringBuilder stringErroCor = validarCor();
            if (!stringErroCor.toString().isEmpty()) {
                if (!stringError.toString().isEmpty()) {
                    stringError.append("\n");
                }
                stringError.append(stringErroCor);
            }
        } else {
            if (!stringError.toString().isEmpty()) {
                stringError.append("\n");
            }
            stringError.append(MessageProduto.COR_OBRIGATORIO);
        }

        if (!stringError.toString().isEmpty()) {
            JOptionPane.showMessageDialog(this, stringError, MensagensUtil.ATENCAO, 2);
        }

        return stringError.toString().isEmpty();
    }

    @Override
    public void pushToModel() {
        if (produto == null) {
            produto = new Produto();
        }
        if (produto.getFornecedor() == null) {
            produto.setFornecedor(new Fornecedor());
        }
        if (produto.getFornecedor().getPessoa() == null) {
            produto.getFornecedor().setPessoa(new Pessoa());
        }

        if (!txtDescricao.getText().isEmpty()) {
            produto.setDescricao(txtDescricao.getText().trim());
        }
        if (!txtFornecedor.getText().isEmpty()) {
            produto.getFornecedor().getPessoa().setNome(txtFornecedor.getText().trim());
        }
        if (!txtReferenciaCatalogo.getText().isEmpty()) {
            produto.setReferenciaCatalogo(txtReferenciaCatalogo.getText().trim());
        }
        if (!txtCodigoFornecedor.getText().isEmpty()) {
            produto.getFornecedor().setCodigo(txtCodigoFornecedor.getText().trim());
        }
        if (!txtCodigoBarras.getText().isEmpty()) {
            produto.setCodigoBarra(txtCodigoBarras.getText().trim());
        }
        if (!txtCodigoProFiscal.getText().isEmpty()) {
            produto.setCodigoProFiscal(txtCodigoProFiscal.getText().trim());
        }
        if (!txtCodigoForFiscal.getText().isEmpty()) {
            produto.setCodigoForFiscal(txtCodigoForFiscal.getText().trim());
        }
        if (!txtEstoqueTotal.getText().isEmpty()) {
            produto.setEstoqueTotal(Integer.parseInt(txtEstoqueTotal.getText().trim()));
        }
        if (!jtxtPrecoCusto.getText().isEmpty()) {
            produto.setValorCusto(Float.parseFloat(jtxtPrecoCusto.getText().replace(".", "").replace(",", ".")));
        }
        if (!jtxtPrecoVenda.getText().isEmpty()) {
            produto.setValorVenda(Float.parseFloat(jtxtPrecoVenda.getText().replace(".", "").replace(",", ".")));
        }

        pushToModelCor();
    }

    private ItemProduto returnObjListPositionGrid(List<ItemProduto> list, int position) {

        if (list.isEmpty() || list.size() <= position) {
            return new ItemProduto();
        }

        return list.get(position);
    }

    private void pushToModelCor() {
        if (produto == null) {
            produto = new Produto();
        }
        if (produto.getListaItensProduto() == null) {
            produto.setListaItensProduto(new ArrayList<ItemProduto>());
        }

        DefaultTableModel dtm = (DefaultTableModel) tableInfCores.getModel();
        int x = dtm.getRowCount();
        for (int i = 0; i < x; i++) {
            ItemProduto itemProduto = returnObjListPositionGrid(produto.getListaItensProduto(), i);
            if (itemProduto.getCor() == null) {
                itemProduto.setCor(new Cor());
            }
            if (dtm.getValueAt(i, 0) != null) {
                itemProduto.getCor().setCodigo(dtm.getValueAt(i, 0).toString());
            }
            if (dtm.getValueAt(i, 1) != null) {
                itemProduto.getCor().setDescricao(dtm.getValueAt(i, 1).toString());
            }
            itemProduto.setEstoqueMinimo(Integer.parseInt(dtm.getValueAt(i, 2).toString()));
            itemProduto.setEstoqueAtual(Integer.parseInt(dtm.getValueAt(i, 3).toString()));
            if (produto.getListaItensProduto().contains(itemProduto)) {
                produto.getListaItensProduto().remove(itemProduto);
                produto.getListaItensProduto().add(i, itemProduto);
            } else {
                produto.getListaItensProduto().add(itemProduto);
            }
        }
    }

    @Override
    public void popularTela() {
        txtDescricao.setText(produto.getDescricao());
        if (produto.getFornecedor() != null) {
            txtFornecedor.setText(produto.getFornecedor().getPessoa().getNome());
            txtCodigoFornecedor.setText(produto.getFornecedor().getCodigo());
        }
        txtReferenciaCatalogo.setText(produto.getReferenciaCatalogo());
        txtCodigoBarras.setText(produto.getCodigoBarra());
        txtCodigoProFiscal.setText(produto.getCodigoProFiscal());
        txtCodigoForFiscal.setText(produto.getCodigoForFiscal());

        jtxtPrecoCusto.setText(String.valueOf(produto.getValorCusto()).replace(".", ","));
        jtxtPrecoVenda.setText(String.valueOf(produto.getValorVenda()).replace(".", ","));

        limparGrid();
        for (ItemProduto itemProduto : produto.getListaItensProduto()) {
            popularGrid(itemProduto);
        }

        txtEstoqueTotal.setText(calcEstoqueTotal() + "");
    }

    @Override
    public void salvar() {
        try {
            if (validarTela()) {
                pushToModel();
                if (mantemProduto(produto)) {
                    JOptionPane.showMessageDialog(this, MensagensUtil.MENSAGEM_SUCESSO_CADASTRO, MensagensUtil.SUCESSO, 1);
                    disableTela(false);
                    btnSalvar.setEnabled(false);
                    btnEditar.setEnabled(true);
                }
            }
        } catch (TransException ex) {
            Logger.getLogger(FormProduto.class.getName()).log(Level.SEVERE, null, ex);
            JOptionPane.showMessageDialog(this, MessageProduto.ERRO_SALVAR_PRODUTO, MensagensUtil.ERRO, 0);
        }

    }

