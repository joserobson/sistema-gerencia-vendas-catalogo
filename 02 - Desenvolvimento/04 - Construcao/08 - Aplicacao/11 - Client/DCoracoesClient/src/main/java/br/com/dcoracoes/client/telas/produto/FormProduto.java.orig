    /**
     * Metodo execultado para enviar os dados para o server e realizar o cadastro
     * @param produto
     * @param informacoesComplementares
     */
    private boolean mantemProduto(Produto produto) throws TransException {
        ProdutoServerImpl serverImpl = new ProdutoServerImpl();
        try {
            produto = serverImpl.salvarProduto(produto);
        } catch (TransException ex) {
            throw ex;
        }

        return true;
    }

    /**
     * Calcula o total de estoque pelos valores informados na grid de cor
     * @return 
     */
    private int calcEstoqueTotal() {
        int totalEstoque = 0;

        DefaultTableModel dtm = (DefaultTableModel) tableInfCores.getModel();
        int x = dtm.getRowCount();
        for (int i = 0; i < x; i++) {
            totalEstoque += (Integer.parseInt(dtm.getValueAt(i, 3).toString()));
        }

        return totalEstoque;
    }

    /**
     * metodo para remover a cor selecionada
     */
    private void removeCor() {
        try {

            JTable table = tableInfCores;

            //atualiza lista de cor
            pushToModelCor();
            int row = table.getSelectedRow();

            ItemProduto itemProduto = produto.getListaItensProduto().get(row);

            if (itemProduto.getId() != null) {
                ProdutoServerImpl serverImpl = new ProdutoServerImpl();
                serverImpl.removeItemProduto(itemProduto);
                //removendo o item produto do objeto dá tela
                if (produto.getListaItensProduto().contains(itemProduto))
                    produto.getListaItensProduto().remove(itemProduto);
            }

            DefaultTableModel dtm = (DefaultTableModel) table.getModel();
            dtm.removeRow(row);

        } catch (TransException ex) {
            Logger.getLogger(FormProduto.class.getName()).log(Level.SEVERE, null, ex);
            JOptionPane.showMessageDialog(this, MessageProduto.ERRO_REMOVER_COR, MensagensUtil.ERRO, 0);
        }

        JOptionPane.showMessageDialog(this, MessageProduto.SUCESSO_REMOVER_COR, MensagensUtil.SUCESSO, 1);
    }

    /**
     * Logica para quando o usuario clicar no botao fechar do frame
     * exibir a tela de confirmação
     */
    private void addListenerParaExibirMgsFecharTela() {
        //cancela acao do botao fechar
        setDefaultCloseOperation(JFrame.DO_NOTHING_ON_CLOSE);

        //add windowsListener sobrescrevendo o metodo windowClosing
        addWindowListener(new WindowAdapter() {

            @Override
            public void windowClosing(WindowEvent e) {
                if (e.getID() == WindowEvent.WINDOW_CLOSING) {
                    close();
                }
            }
        });
    }
